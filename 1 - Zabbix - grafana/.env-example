# Configurações do PostgreSQL
POSTGRES_DB=zabbix
POSTGRES_USER=zabbix_user
POSTGRES_PASSWORD=strong_password_here
POSTGRES_HOST=postgres

# Configurações do Zabbix
ZABBIX_SERVER_HOST=zabbix-server
ZBX_TIMEOUT=30
PHP_TZ=America/Sao_Paulo

# Configurações do Grafana
GRAFANA_ADMIN_PASSWORD=secure_grafana_password
GRAFANA_PLUGINS=alexanderzobnin-zabbix-app

# Configurações de Rede
FRONTEND_SUBNET=172.20.0.0/24
BACKEND_SUBNET=172.20.1.0/24
DB_SUBNET=172.20.2.0/24

# Portas dos Serviços
POSTGRES_PORT=5432
ZABBIX_SERVER_PORT=10051
ZABBIX_WEB_HTTP_PORT=8080
ZABBIX_WEB_HTTPS_PORT=8443
GRAFANA_PORT=3000

# Limites de Volume (em GB)
POSTGRES_VOLUME_SIZE=50
ZABBIX_VOLUME_SIZE=20
GRAFANA_VOLUME_SIZE=10

# Limites de Memória RAM (em MB)
POSTGRES_MEMORY_LIMIT=2048
POSTGRES_MEMORY_RESERVATION=1024
ZABBIX_SERVER_MEMORY_LIMIT=1536
ZABBIX_SERVER_MEMORY_RESERVATION=768
ZABBIX_WEB_MEMORY_LIMIT=1024
ZABBIX_WEB_MEMORY_RESERVATION=512
GRAFANA_MEMORY_LIMIT=1024
GRAFANA_MEMORY_RESERVATION=512

# Limites de CPU
POSTGRES_CPU_LIMIT=2
ZABBIX_SERVER_CPU_LIMIT=2
ZABBIX_WEB_CPU_LIMIT=1
GRAFANA_CPU_LIMIT=1